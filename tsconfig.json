{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES2020",
    "lib": [
      "ESNext"
    ],
    "declaration": true,
    "sourceMap": true,
    "removeComments": false,
    "alwaysStrict": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "incremental": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}